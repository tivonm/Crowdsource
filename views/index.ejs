<!DOCTYPE html>
<html>
<head>
<% include ./Partials/head %>

</head>

<body>

<style>
 header{
    background-color: lightblue;
    height: 80px;
    }
</style>
<header>
<% include ./Partials/header %>
</header>
  <div class = "container">
    <h3>Projects</h3>
    <% if(locals.obj.projects != null ) { %>
      <table class="table table-bordered">

      <tr>
      <th>Project Name</th>
      <th>Project Description</th>
      <th>Date Created</th>
      <th>Tags</th>
      </tr>

      
          <% for(var i = 0; i < obj.projects.length; i++) { %>
          <tr>
          <td><a href="/project/view/<%= obj.projects[i].id %>"><%= obj.projects[i].name %></a></td>
          <td><%= obj.projects[i].description %></td>
          <td><%= obj.projects[i].createdDate %></td>
          <td><%= obj.projects[i].tags %></td>  
          </tr>       
          <% } %>    
      
      </table>
    <% } else { %>
      <label>No requested projects. Click <a href="/project/new"> here to create a new project.</a> </label>
    <% } %>
  </div>

  <div class="container">
    <h3>Watched Projects</h3>
    <% if(locals.obj.watchedProjects != null ) { %>
   <table class="table table-bordered">
      <tr>
      <th>Project Name</th>
      <th>Project Description</th>
      <th>Date Created</th>
      <th>Tags</th>
      </tr>

      
          <% for(var i = 0; i < obj.watchedProjects.length; i++) { %>
            <tr>
            <td><a href="/project/view/<%= obj.watchedProjects[i].id %>"><%= obj.watchedProjects[i].name %></a></td>
            <td><%= obj.watchedProjects[i].description %></td>
            <td><%= obj.watchedProjects[i].createdDate %></td>
            <td><%= obj.watchedProjects[i].tags %></td>
          <% } %>
         

      </tr>
      </table>
      <% } else { %>
       <label>No Watched Projects. Click <a href="/project/view" here to start watching a project.</a> </label>
    <% } %>
    </div>

     <div class="container">
    <h3>Submissions</h3>
      <% if(locals.obj.submittedProjects != null ) { %>
      <table class="table table-bordered">
      <tr>
      <th>Project Name</th>
      <th>Project Description</th>
      <th>File Name</th>
      <th>Date Created</th>
      </tr>
    <% for(var i = 0; i < obj.submittedProjects.length; i++) { %>
      <tr>
      <td><%= obj.submittedProjects[i].name %></td>
      <td><%= obj.submittedProjects[i].description %></td>
      <td><a href="/public/files/submissionFiles/<%= obj.submittedProjects[i].fileUrl %>" download><%= obj.submittedProjects[i].fileUrl %></a></td>
      <td><%= obj.submittedProjects[i].createdDate %></td>
      </tr>
      <% } %>
      </table>
    <% } else { %>
    <label>No submissions to view </label>
    <% } %>
  </div>

  
  
  


</body>
</html>